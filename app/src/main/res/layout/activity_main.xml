<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="From"
                android:textColor="@color/textColor"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/formSpinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/formText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:maxLength="18"
                android:textColor="@color/editText"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="To"
                android:textColor="@color/textColor"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/toSpinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/toText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:textColor="@color/editText"
                android:textSize="30sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

    <!-- KeyPad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <!--ROW 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSeven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberBtn"
                android:onClick="onDigit"
                android:text="@string/Seven"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/btnEight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberBtn"
                android:onClick="onDigit"
                android:text="@string/Eight"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnNine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberBtn"
                android:onClick="onDigit"
                android:text="@string/Nine"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnCross"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="#7B1FA2"
                android:onClick="onCross"
                android:text="@string/Cross"
                android:textSize="45sp" />


        </LinearLayout>

        <!--ROW 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFour"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberBtn"
                android:onClick="onDigit"
                android:text="@string/Four"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnFive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberBtn"
                android:onClick="onDigit"
                android:text="@string/Five"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnSix"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberBtn"
                android:onClick="onDigit"
                android:text="@string/Six"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="#FBC02D"
                android:onClick="onClear"
                android:text="@string/Clear"
                android:textSize="45sp" />


        </LinearLayout>

        <!--ROW 3 -->
        <LinearLayout
            android:id="@+id/f"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOne"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberBtn"
                android:onClick="onDigit"
                android:text="@string/One"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnTow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberBtn"
                android:onClick="onDigit"
                android:text="@string/Two"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnThree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberBtn"
                android:onClick="onDigit"
                android:text="@string/Three"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@color/dotBtn"
                android:gravity="center"
                android:onClick="onDot"
                android:text="@string/Dot"
                android:textSize="50sp" />


        </LinearLayout>

        <!--ROW 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnZero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/numberBtn"
                android:onClick="onDigit"
                android:text="@string/Zero"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@color/equalBtn"
                android:onClick="onEqual"
                android:text="@string/Equal"
                android:textSize="48sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>